{% assign trends = include.trends %}
{% if trends and trends != empty %}
  <section class="dashboard-section dashboard-trends">
    <div class="container">
      <div class="dashboard-section__header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <h2 class="dashboard-section__title h4 mb-2 mb-md-0">
          Trend Signals
        </h2>
        <p class="dashboard-section__hint mb-0 text-muted">
          Quick sparkline view with data-table toggle for accessibility and exports.
        </p>
      </div>
      <div class="dashboard-trends__grid row g-3">
        {% for trend in trends %}
          <div class="col-12 col-lg-4">
            {% render 'dashboard/trend-card', trend: trend %}
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
