{% assign kpis = include.kpis %}
{% if kpis and kpis != empty %}
  <section class="dashboard-section dashboard-kpis">
    <div class="container">
      <div class="dashboard-section__header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <h2 class="dashboard-section__title h4 mb-2 mb-md-0">
          Summary KPIs
        </h2>
        <p class="dashboard-section__hint mb-0 text-muted">
          Benchmarked against current sprint targets. Toggle insights to review narrative shifts.
        </p>
      </div>
      <div class="dashboard-kpis__grid row g-3">
        {% for kpi in kpis %}
          <div class="col-12 col-md-6 col-xl-3">
            {% render 'dashboard/kpi-card', kpi: kpi %}
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
