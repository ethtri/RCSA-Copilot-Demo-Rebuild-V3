{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rcsa-demo.captech.com/schemas/dashboard.schema.json",
  "title": "1LoD Dashboard Metrics Contract",
  "description": "Schema for executive dashboard mocks consumed by Sprint 1 Streams 1.5 and 1.6.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "summary",
    "kpis",
    "trendSeries",
    "alerts",
    "actionQueue"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v\\d+\\.\\d+(\\.\\d+)?$"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "reportingWindow",
        "refreshFrequency",
        "dataMode"
      ],
      "properties": {
        "reportingWindow": {
          "type": "string",
          "minLength": 1
        },
        "refreshFrequency": {
          "type": "string",
          "minLength": 1
        },
        "dataMode": {
          "type": "string",
          "enum": [
            "mock",
            "live"
          ]
        }
      }
    },
    "kpis": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "label",
          "value",
          "unit",
          "trend"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "label": {
            "type": "string",
            "minLength": 1
          },
          "value": {
            "type": "number"
          },
          "unit": {
            "type": "string",
            "minLength": 1
          },
          "trend": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "direction",
              "percentage"
            ],
            "properties": {
              "direction": {
                "type": "string",
                "enum": [
                  "up",
                  "down",
                  "flat"
                ]
              },
              "percentage": {
                "type": "number"
              }
            }
          },
          "target": {
            "type": "number"
          },
          "changeNarrative": {
            "type": "string"
          }
        }
      }
    },
    "trendSeries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "title",
          "series"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "series": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "name",
                "values"
              ],
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "values": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                      "date",
                      "value"
                    ],
                    "properties": {
                      "date": {
                        "type": "string",
                        "format": "date"
                      },
                      "value": {
                        "type": "number"
                      }
                    }
                  }
                },
                "target": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    },
    "alerts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "severity",
          "title",
          "message"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "severity": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ]
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "message": {
            "type": "string",
            "minLength": 1
          },
          "cta": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "label",
              "href"
            ],
            "properties": {
              "label": {
                "type": "string",
                "minLength": 1
              },
              "href": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "actionQueue": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "owner",
        "items"
      ],
      "properties": {
        "owner": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "id",
              "title",
              "status"
            ],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z0-9-]+$"
              },
              "title": {
                "type": "string",
                "minLength": 1
              },
              "status": {
                "type": "string",
                "enum": [
                  "not-started",
                  "in-progress",
                  "blocked",
                  "completed"
                ]
              },
              "dueDate": {
                "type": "string",
                "format": "date"
              },
              "owner": {
                "type": "string"
              },
              "linkedRiskId": {
                "type": "string"
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "dataQuality": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "completeness": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "lagDays": {
          "type": "integer",
          "minimum": 0
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
